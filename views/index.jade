extends layout

block content
  .roulette-header
    img(src='images/r_logo.png', width='300px')
  .container
      .login-content
        br
        br
        form.form(name='formLogIn', method='post' action='/index')
          br
          input.username(type='text', name='username', placeholder='Username')
          br
          input.password(type='password', name='password', placeholder='Password')
          br
          a(href='gamelobby')
            input(type='submit', value='Log in')
          br
          a(href='signup')
            input(type='button', value='Sign up')
          br
          p.forgotPassword
            | Forgot password?
            a.forgotPassword(href='forgotpassword') Click here
          br
